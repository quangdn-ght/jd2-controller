# JDownloader MyJDownloader Configuration
# Copy this file to .env and fill in your credentials

# MyJDownloader Credentials
JDOWNLOADER_EMAIL=your@email.com
JDOWNLOADER_PASSWORD=yourpassword

# Optional: Custom device name (defaults to JDownloader@hostname)
JDOWNLOADER_DEVICE_NAME=

# JDownloader Installation Path
JDOWNLOADER_HOME=/opt/jd2

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# API Security (optional - set to enable API key authentication)
API_KEY=
